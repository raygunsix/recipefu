<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @recipe.title %>
</p>

<p>
  <b>Description:</b>
  <%= @recipe.description %>
</p>

<p>
  <b>Steps:</b>
  </br>
  <% @recipe.steps.each do |step| %>
    <%= step.instructions %></br>
  <% end %>
</p>

<% if current_user %>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<% end %>

<%= link_to 'Back', recipes_path %>
