<%= nested_form_for([current_user, @recipe]) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "text_field" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, :class => "text_field" %>
  </div>
  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_area :instructions, :class => "text_field" %>
  </div>

   <% f.fields_for :amounts do |ff| %>  
     <div class="field form_align">  
       <%= ff.label :quantity, "Quantity" %>
       <%= ff.text_field :quantity, :class => "text_field_small" %>  
     </div>
     <div class="field form_align">  
       <%= ff.label :size, "Size" %>
       <%= ff.text_field :size, :class => "text_field_small" %>   
     </div>
     <div class="field">   
       <%= ff.label :ingredient_name, "Ingredient" %>
       <%= ff.text_field :ingredient_name, :class => "text_field" %>
       <%= ff.link_to_remove "remove" %>
     </div>
   <% end %>

   </br></br>

   <%= f.link_to_add "add ingredient", :amounts %>

   </br>

  <div class="send_form actions">
    <%= f.submit %>
  </div>
<% end %>
